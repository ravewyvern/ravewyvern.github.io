{
  "info": {
    "id": "math",
    "name": "Math Utilities",
    "version": "1.2",
    "author": "NovaScript Team",
    "description": "Provides basic math and random number generation functions for NovaScript."
  },
  "functions": [
    {
      "name": "random",
      "inputs": ["min", "max"],
      "javascript": "return Math.floor(Math.random() * (max - min + 1)) + min;",
      "returns": "integer"
    },
    {
      "name": "pow",
      "inputs": ["base", "exponent"],
      "javascript": "return Math.pow(base, exponent);",
      "returns": "number"
    },
    {
      "name": "abs",
      "inputs": ["num"],
      "javascript": "return Math.abs(num);",
      "returns": "number"
    },
    {
      "name": "sqrt",
      "inputs": ["num"],
      "javascript": "return Math.sqrt(num);",
      "returns": "number"
    },
    {
      "name": "round",
      "inputs": ["num"],
      "javascript": "return Math.round(num);",
      "returns": "integer"
    },
    {
      "name": "floor",
      "inputs": ["num"],
      "javascript": "return Math.floor(num);",
      "returns": "integer"
    },
    {
      "name": "ceil",
      "inputs": ["num"],
      "javascript": "return Math.ceil(num);",
      "returns": "integer"
    },
    {
      "name": "sin",
      "inputs": ["angle"],
      "javascript": "return Math.sin(angle);",
      "returns": "number"
    },
    {
      "name": "cos",
      "inputs": ["angle"],
      "javascript": "return Math.cos(angle);",
      "returns": "number"
    },
    {
      "name": "tan",
      "inputs": ["angle"],
      "javascript": "return Math.tan(angle);",
      "returns": "number"
    }
  ]
}
